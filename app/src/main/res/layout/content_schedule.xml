<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="7dp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/dividerColor" />

            <TextView
                android:id="@+id/tv_col"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="7dp"
                android:text="周一"
                android:textColor="@color/tableTitleTextColor" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/dividerColor" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="7dp"
                android:text="周二"
                android:textColor="@color/tableTitleTextColor" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/dividerColor" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="7dp"
                android:text="周三"
                android:textColor="@color/tableTitleTextColor" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/dividerColor" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="7dp"
                android:text="周四"
                android:textColor="@color/tableTitleTextColor" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/dividerColor" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="7dp"
                android:text="周五"
                android:textColor="@color/tableTitleTextColor" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/dividerColor" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="7dp"
                android:text="周六"
                android:textColor="@color/tableTitleTextColor" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/dividerColor" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="7dp"
                android:text="周日"
                android:textColor="@color/tableTitleTextColor" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/dividerColor" />
    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_title">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_row"
                        android:layout_width="30dp"
                        android:layout_height="150dp"
                        android:gravity="center"
                        android:padding="7dp"
                        android:text="0102"
                        android:textColor="@color/tableTitleTextColor" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/dividerColor" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="150dp"
                        android:gravity="center"
                        android:padding="7dp"
                        android:text="0304"
                        android:textColor="@color/tableTitleTextColor" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/dividerColor" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="150dp"
                        android:gravity="center"
                        android:padding="7dp"
                        android:text="0506"
                        android:textColor="@color/tableTitleTextColor" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/dividerColor" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="150dp"
                        android:gravity="center"
                        android:padding="7dp"
                        android:text="0708"
                        android:textColor="@color/tableTitleTextColor" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/dividerColor" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="150dp"
                        android:gravity="center"
                        android:padding="7dp"
                        android:text="0910"
                        android:textColor="@color/tableTitleTextColor" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/dividerColor" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="150dp"
                        android:gravity="center"
                        android:padding="7dp"
                        android:text="1112"
                        android:textColor="@color/tableTitleTextColor" />

                </LinearLayout>


                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/dividerColor" />
            </LinearLayout>

            <GridLayout
                android:id="@+id/gl_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ll_time"
                android:columnCount="7"
                android:horizontalSpacing="0.5dp"
                android:verticalSpacing="0.5dp" />
        </RelativeLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/frame_load"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/loadBackground"
        android:visibility="invisible">

        <ProgressBar
            style="@android:style/Widget.ProgressBar.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>
</RelativeLayout>
