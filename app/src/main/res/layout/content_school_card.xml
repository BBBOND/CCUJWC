                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="入学前学历："
                    android:textSize="18sp" />

                <android.support.v7.widget.AppCompatTextView
