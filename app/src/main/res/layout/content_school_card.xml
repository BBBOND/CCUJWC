                    android:id="@+id/tv_homePhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#e2e2e2"
                    android:textSize="18sp" />
            </android.support.v7.widget.LinearLayoutCompat>

